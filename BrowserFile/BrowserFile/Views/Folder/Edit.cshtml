@model BrowserFile.Models.ViewModels.EditFolderViewModel

<div class="w-50">
    <h3>Edit folder</h3>
    <form asp-action="Edit" asp-controller="Folder" method="post">
        <input type="hidden" asp-for="OriginalFolder.Id" />

        <div class="mb-3">
            <label asp-for="FolderToCreate.Name" class="form-label"></label>
            <input asp-for="FolderToCreate.Name" class="form-control" />
            <span asp-validation-for="FolderToCreate.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FolderToCreate.Description" class="form-label"></label>
            <textarea asp-for="FolderToCreate.Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="FolderToCreate.Tag" class="form-label"></label>
            <input asp-for="FolderToCreate.Tag" class="form-control" />
            <span asp-validation-for="FolderToCreate.Tag" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FolderToCreate.IconId" class="form-label">Choose an icon:</label>
            <br />
            @foreach (var icon in Model.Icons)
            {
                <div class="icon-selector">
                    <input type="radio" asp-for="FolderToCreate.IconId" value="@icon.Id" id="icon-@icon.Id" />
                    <label for="icon-@icon.Id">
                        @Html.Raw(System.IO.File.ReadAllText("wwwroot" + icon.Url))
                    </label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

<style>
    .icon-selector {
        display: inline-block;
        margin: 5px;
        cursor: pointer;
    }

        .icon-selector input[type="radio"] {
            display: none;
        }

        .icon-selector label {
            display: inline-block;
            padding: 10px;
            border: 2px solid transparent;
            border-radius: 8px;
            transition: border-color 0.3s;
        }

        .icon-selector input[type="radio"]:checked + label {
            border-color: #007bff;
            background-color: #e3f2fd;
        }

        .icon-selector label:hover {
            border-color: #ccc;
        }
</style>