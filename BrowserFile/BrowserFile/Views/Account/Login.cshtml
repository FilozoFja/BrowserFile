@model BrowserFile.Models.ViewModels.LoginViewModel

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh">
    <div class="card shadow-lg p-4 rounded-4 w-100 mx-2" style="max-width: 400px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Login</h2>
            <p class="text-muted">Please enter your details to log in</p>
        </div>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>
        }
        <form asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" placeholder="szopszopiksszopers" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                    Zaloguj się
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
