@model BrowserFile.Models.ViewModels.ShareSettingsViewModel
@{
    ViewData["Title"] = "Share settings";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css">

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-share-alt"></i> @(Model.File.IsShared ? "File sharing options" : "Share file")</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>File:</strong> @Model.FileName
                    </div>

                    @if (Model.SharedLink.IsValid)
                    {
                        <div class="alert alert-success">
                            <h6><i class="fas fa-link"></i> Active sharing link</h6>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" id="shareLink"
                                       value="@Model.ShareUrl" readonly>
                                <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">
                                    <i class="fas fa-copy"></i> Copy
                                </button>
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-clock"></i> Expires: @Model.SharedLink.ExpiresAt.ToString("g")
                                @if (Model.SharedLink.OneTime)
                                {
                                    <span class="badge bg-warning">One-time use</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.SharedLink.PasswordHash))
                                {
                                    <span class="badge bg-info">Password protected</span>
                                }
                            </small>
                        </div>
                    }

                    <form asp-action="ShareNewFileLink" asp-route-id="@Model.File.Id" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="ExpirationDate" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> Expiration Date
                                </label>
                                <input type="datetime-local" class="form-control"
                                       asp-for="ExpirationDate"
                                       min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                                       value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-ddTHH:mm")">
                                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="Password" class="form-label">
                                    <i class="fas fa-lock"></i> Password (optional)
                                </label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Leave empty for no password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" asp-for="OneTime" id="oneTime">
                                <label class="form-check-label" for="oneTime">
                                    <i class="fas fa-eye-slash"></i> One-time download only
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-share"></i>
                                @(Model.SharedLink != null ? "Create New Link" : "Create Sharing Link")
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Files
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-history"></i> Sharing History</h5>
                </div>
                <div class="card-body">
                    @if (Model.SharingHistory != null && Model.SharingHistory.Any())
                    {
                        @foreach (var share in Model.SharingHistory)
                        {
                            <div class="border-bottom pb-2 mb-2">
                                <small class="text-muted">@share.ExpiresAt.ToString("g")</small><br>
                                <span class="badge @(share.IsValid ? "bg-success" : "bg-secondary")">
                                    @(share.IsValid ? "Active" : "Expired")
                                </span>
                                @if (share.OneTime)
                                {
                                    <span class="badge bg-warning">One-time</span>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No sharing history available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>

<script>
    function copyToClipboard() {
        const linkInput = document.getElementById('shareLink');
        linkInput.select();
        linkInput.setSelectionRange(0, 99999);

        navigator.clipboard.writeText(linkInput.value).then(function () {
            toastr.success('Link copied to clipboard!');
        }).catch(function () {
            document.execCommand('copy');
            toastr.success('Link copied to clipboard!');
        });
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <text>toastr.success('@TempData["SuccessMessage"]'); </text>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <text>toastr.error('@TempData["ErrorMessage"]'); </text>
    }

        document.querySelector('form').addEventListener('submit', function (e) {
            const expirationDate = new Date(document.getElementById('ExpirationDate').value);
            const now = new Date();

            if (expirationDate <= now) {
                e.preventDefault();
                toastr.error('Expiration date must be in the future');
            }
        });
</script>